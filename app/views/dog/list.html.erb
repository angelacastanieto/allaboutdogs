<%= stylesheet_link_tag "allaboutdogs" %>

<div class="container">
  <header>
    <div class="align-parent">
      <h1>All about dogs</h1>
      <img id="header-image" width="4%" height="4%" src="http://www.clipartbest.com/cliparts/pT5/6Ap/pT56ApLAc.png"/>
    </div>
  </header>

  <nav>
    <ul>
      <a href="#"><li>HTML only</li></a>
      <a href="#"><li>HTML styled with CSS</li></a>
      <a href="#"><li>Dynamic webpage without data</li></a>
      <a class="active-page" href="#"><li>Dynamic webpage with data</li></a>
    </ul>
  </nav>

  <article>
    <div id="container">
      <div class="bottom">
          <div class="col">
            <h3>Who is your favorite dog?</h3>

            <%= form_tag :action => 'create' do %>
            <p><label for = "dog_name">Dog's name</label>:
            <%= text_field 'dog', 'name' %></p>

            <p><label for = "dog_breed">Dog's breed</label>:
            <%= text_field 'dog', 'breed' %></p>

            <%= submit_tag "Add", class: 'button' %>

            <% end -%>
          </div>
          <div class="col">
            <% if @dogs.blank? %>
            <h3>No favorites yet!</h3>
            <% else %>
            <table id="dogs">
              <caption><h3>Some favorites:</h3></caption>
              <tr>
                <th>Dog's name</th>
                <th>Dog's breed</th>
              </tr>
               <% @dogs.each do |c| %>
               <tr>
                 <td><%= c.name -%></td>
                 <td><%= c.breed -%></td>
               </tr>
               <% end  %>
            </table>
          </div>
      </div>
      <div>
    </div>
  </div>

  </article>
  <footer><a href="https://www.paws.org/kids/learn/pets/dogs/">Learn more about dogs!</a></footer>

</div>

<% end %>

</body>
